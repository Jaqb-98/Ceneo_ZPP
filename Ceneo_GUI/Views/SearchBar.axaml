<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="50"
             x:Class="Ceneo_GUI.Views.SearchBar">
  <Grid>

    <StackPanel Orientation="Horizontal">

      <TextBox x:Name="searchBar" MaxHeight="25" MinWidth="300"></TextBox>
      <Button Command="{Binding Search}" CommandParameter="{Binding Text, ElementName=searchBar}">Search</Button>

    </StackPanel>
  </Grid>
</UserControl>
